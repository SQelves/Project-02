<div class="formContainer card">
        <form id="createForm" class="card-content">
            <span class="card-title">Create a New Gift Exchange</span>
            <label for="giftExchangeName">Gift Exchange Name</label>
            <input type="text" id="giftExchangeName">
            <br>
            <label for="hostFirstName">First Name</label>
            <input type="text" id="hostFirstName">
            <br>
            <label for="hostLastName">Last Name</label>
            <input type="text" id="hostLastName">
            <br>
            <label for="budget">What is the gift budget?</label>
            <input type="number" id="budget">
            <br>
            <button id="createExchangeBtn" data-target="modal1" class="btn modal-trigger">Submit</button>
        </form>
</div>

<!-- Modal -->
<div class="modal fade" id="modal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-content" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModal">Yayy!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
              <h6 class="modal-title" id="modalMessage">You have successfully created a new gift exchange. View it in your profile now.</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/createGiftExchange.js"></script>