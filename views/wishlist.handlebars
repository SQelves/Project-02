<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}! View your wishlists below.</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Wishlist:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name">Name:</label>
        <input class="form-input" type="text" id="wishlist name" name="wishlist name" />
      </div>
      <div class="form-group">
        <label for="wishlist_info">Price Limit:</label>
        <input class="form-input" type="number" id="wishlist price limit" name="wishlist price limit" />
      </div>
      <div class="form-group">
        <label for="wishlist_info">Rules:</label>
        <input class="form-input" type="text" id="wishlist rules" name="wishlist rules" />
      </div>
      <div class="form-group">
        <label for="wishlist_info">RSVP By Date:</label>
        <input class="form-input" type="date" id="wishlist rsvp date" name="wishlist rsvp date" />
      </div>
      <div class="form-group">
        <label for="wishlist_info">Gift Exchange Date:</label>
        <input class="form-input" type="date" id="wishlist exchange date" name="wishlist exchange date" />
      </div>
      <div class="form-group">
        <label for="wishlist_info">Gift Exchange Time:</label>
        <input class="form-input" type="time" id="wishlist exchange time" name="wishlist exchange time" />
      </div>
      <div class="form-group">
        <label for="wishlist-desc">Description:</label>
        <input class="form-input" type="text" id="wishlist description" name="wishlist description" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if wishlist.length}}
  <div class="col-md-6 project-list">
    <h3>Your Wishlists:</h3>

    {{#each wishlists as |wishlist|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{wishlist.id}}">{{wishlist.name}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/public/js/wishlist.js"></script>