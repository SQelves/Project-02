<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}! View your wishlists below.</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3></h3>


  {{#if wishlist.length}}
  <div class="col-md-6 project-list">
    <h3>Your Wishlists:</h3>

    {{#each wishlists as |wishlist|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{wishlist.id}}">{{wishlist.name}}</a></h4>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/wishlist.js"></script>